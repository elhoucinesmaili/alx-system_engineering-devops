#!/bin/bash
# Update package list and install Nginx
apt-get update -y
apt-get install nginx -y

# Create a custom index page
echo "Hello World!" > /var/www/html/index.html

# Ensure Nginx is running and restart it without using systemctl
/etc/init.d/nginx restart

# Confirm Nginx is listening on port 80 (optional step for debugging)
curl -s http://localhost/ | grep "Hello World!" && echo "Nginx configured successfully"

